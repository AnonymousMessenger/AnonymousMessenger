<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/dx_dark_purple</item>
        <item name="colorPrimaryDark">@color/dx_dark_purple</item>
        <item name="android:textColorSecondary">@color/dx_white</item>
        <item name="android:textColorPrimary">@color/dx_white</item>
        <item name="android:textColor">@color/dx_white</item>
        <item name="android:textColorHint">@color/dx_white</item>
        <item name="colorAccent">@color/dx_night_940</item>
        <item name="android:windowBackground">@color/dx_dark_purple</item>
        <item name="android:navigationBarColor">@color/dx_dark_purple</item>
        <item name="android:itemBackground">@color/dx_dark_purple</item>
        <item name="alertDialogTheme">@style/AppAlertDialog</item>
    </style>

<!--    <style name="splashScreenTheme" parent="@android:style/Theme.DeviceDefault.Light.NoActionBar">-->
<!--    </style>-->

    <style name="ButtonTheme" parent="Theme.AppCompat.DayNight">
        <!-- A strange hack needed only to override button color on all API levels -->
        <item name="colorAccent">@color/dx_brand_green</item>
    </style>
    <style name="DXButton" parent="Widget.AppCompat.Button.Colored">
<!--        <item name="android:theme">@style/ButtonTheme</item>-->
        <item name="android:background">@drawable/button_ripple</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/text_size_medium</item>
        <item name="android:padding">@dimen/margin_large</item>
        <item name="android:textColor">@color/dx_button_text</item>
    </style>


    <style name="DXSendButton" parent="Widget.AppCompat.Button.Colored">
<!--        <item name="colorAccent">@color/dx_brand_green</item>-->
<!--        <item name="android:layout_width">match_parent</item>-->
<!--        <item name="android:layout_height">wrap_content</item>-->
<!--        <item name="android:textSize">@dimen/text_size_medium</item>-->
<!--        <item name="android:padding">@dimen/margin_large</item>-->
<!--        <item name="android:textColor">@color/dx_button_text</item>-->
    </style>

    <style name="AppAlertDialog" parent="ThemeOverlay.AppCompat.Dialog.Alert">
        <!-- Used for the buttons -->
        <item name="colorAccent">@color/dx_white</item>
        <!-- Used for the title and text -->
        <item name="android:textColorPrimary">@color/dx_white</item>
        <!-- Used for the background -->
        <item name="android:background">@color/dx_brand_green</item>

        <item name="buttonBarNegativeButtonStyle">@style/NegativeButtonStyle</item>
        <item name="buttonBarPositiveButtonStyle">@style/PositiveButtonStyle</item>
    </style>

    <style name="NegativeButtonStyle" parent="Widget.AppCompat.Button.ButtonBar.AlertDialog">
        <item name="android:textColor">@color/dx_button_text</item>
    </style>

    <style name="PositiveButtonStyle" parent="Widget.AppCompat.Button.ButtonBar.AlertDialog">
        <item name="android:textColor">@color/dx_button_text</item>
    </style>

</resources>