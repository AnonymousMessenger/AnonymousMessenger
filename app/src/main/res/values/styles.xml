        <item name="android:textColorLink">@color/dx_dark</item>
        <item name="android:windowBackground">@color/dx_white</item>
        <item name="android:navigationBarColor">#000000</item>
        <item name="android:itemBackground">@color/dx_white</item>
        <item name="placeholderTextColor">@color/dx_dark</item>
        <item name="android:textColorHighlight">@color/green_tor</item>
        <item name="android:textColorTertiary">@color/dx_dark</item>
